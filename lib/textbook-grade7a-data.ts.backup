/**
 * 初始化七年级上册教材数据
 * 将数据保存到AsyncStorage中
 */
export async function initGrade7AData() {
  const { saveUnitVocabulary } = require("./textbook-vocabulary");
  
  for (const unit of GRADE_7A_UNITS) {
    await saveUnitVocabulary(unit);
  }
  
  console.log("七年级上册教材数据初始化完成");
}

/**
 * 获取七年级上册指定单元数据
 */
export function getGrade7AUnit(unitNumber: number): TextbookUnit | undefined {
  return GRADE_7A_UNITS.find(u => u.unit === unitNumber);
}
